{
  "designSystem": {
    "name": "DataDashboard",
    "version": "1.0.0",
    "framework": "tailwind",
    "theme": {
      "colors": {
        "primary": {
          "50": "#eef2ff",
          "100": "#e0e7ff",
          "400": "#818cf8",
          "500": "#6366f1",
          "600": "#4f46e5",
          "700": "#4338ca"
        },
        "success": {
          "light": "#10b981",
          "default": "#059669",
          "text": "#065f46"
        },
        "danger": {
          "light": "#ef4444",
          "default": "#dc2626",
          "text": "#991b1b"
        },
        "neutral": {
          "50": "#f9fafb",
          "100": "#f3f4f6",
          "200": "#e5e7eb",
          "300": "#d1d5db",
          "400": "#9ca3af",
          "500": "#6b7280",
          "600": "#4b5563",
          "700": "#374151",
          "800": "#1f2937",
          "900": "#111827"
        },
        "background": {
          "primary": "#ffffff",
          "secondary": "#f3f4f6",
          "tertiary": "#f9fafb",
          "card": "#ffffff",
          "overlay": "rgba(0, 0, 0, 0.5)"
        },
        "indicators": {
          "positive": "#10b981",
          "negative": "#ef4444",
          "neutral": "#6b7280"
        }
      },
      "typography": {
        "fontFamily": {
          "sans": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
          "mono": "'SF Mono', Monaco, Consolas, 'Courier New', monospace"
        },
        "fontSize": {
          "xs": "0.75rem",
          "sm": "0.875rem",
          "base": "1rem",
          "lg": "1.125rem",
          "xl": "1.25rem",
          "2xl": "1.5rem",
          "3xl": "1.875rem",
          "4xl": "2.25rem",
          "5xl": "3rem"
        },
        "fontWeight": {
          "normal": "400",
          "medium": "500",
          "semibold": "600",
          "bold": "700"
        },
        "lineHeight": {
          "tight": "1.25",
          "normal": "1.5",
          "relaxed": "1.75"
        }
      },
      "spacing": {
        "xs": "0.5rem",
        "sm": "1rem",
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "3rem",
        "2xl": "4rem"
      },
      "borderRadius": {
        "none": "0",
        "sm": "0.125rem",
        "default": "0.375rem",
        "md": "0.5rem",
        "lg": "0.75rem",
        "xl": "1rem",
        "2xl": "1.5rem",
        "full": "9999px"
      },
      "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
        "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
      },
      "transitions": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "components": {
      "layout": {
        "sidebar": {
          "width": "16rem",
          "background": "neutral-900",
          "borderRight": "1px solid neutral-800",
          "padding": "spacing-md",
          "items": {
            "spacing": "spacing-xs",
            "padding": "spacing-sm spacing-md",
            "borderRadius": "borderRadius-md",
            "hover": {
              "background": "neutral-800",
              "transition": "transitions-normal"
            },
            "active": {
              "background": "neutral-800",
              "borderLeft": "3px solid primary-500"
            },
            "icon": {
              "size": "1.25rem",
              "marginRight": "spacing-sm"
            },
            "text": {
              "color": "neutral-300",
              "fontSize": "fontSize-sm",
              "fontWeight": "fontWeight-medium"
            }
          }
        },
        "header": {
          "height": "4rem",
          "background": "background-primary",
          "borderBottom": "1px solid neutral-200",
          "padding": "0 spacing-lg",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between"
        },
        "mainContent": {
          "background": "background-secondary",
          "padding": "spacing-lg",
          "minHeight": "100vh"
        }
      },
      "card": {
        "base": {
          "background": "background-card",
          "borderRadius": "borderRadius-lg",
          "shadow": "shadows-default",
          "padding": "spacing-md",
          "border": "1px solid neutral-200"
        },
        "variants": {
          "elevated": {
            "shadow": "shadows-lg",
            "border": "none"
          },
          "flat": {
            "shadow": "none",
            "background": "background-secondary"
          },
          "outlined": {
            "shadow": "none",
            "border": "2px solid neutral-200"
          }
        },
        "header": {
          "marginBottom": "spacing-md",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between"
        },
        "title": {
          "fontSize": "fontSize-lg",
          "fontWeight": "fontWeight-semibold",
          "color": "neutral-900"
        }
      },
      "button": {
        "base": {
          "padding": "0.5rem 1rem",
          "borderRadius": "borderRadius-md",
          "fontSize": "fontSize-sm",
          "fontWeight": "fontWeight-medium",
          "transition": "transitions-normal",
          "cursor": "pointer",
          "display": "inline-flex",
          "alignItems": "center",
          "justifyContent": "center",
          "gap": "spacing-xs"
        },
        "variants": {
          "primary": {
            "background": "primary-600",
            "color": "white",
            "hover": {
              "background": "primary-700"
            }
          },
          "secondary": {
            "background": "neutral-100",
            "color": "neutral-700",
            "border": "1px solid neutral-300",
            "hover": {
              "background": "neutral-200"
            }
          },
          "ghost": {
            "background": "transparent",
            "color": "neutral-600",
            "hover": {
              "background": "neutral-100"
            }
          },
          "danger": {
            "background": "danger-default",
            "color": "white",
            "hover": {
              "background": "danger-light"
            }
          }
        },
        "sizes": {
          "sm": {
            "padding": "0.25rem 0.75rem",
            "fontSize": "fontSize-xs"
          },
          "md": {
            "padding": "0.5rem 1rem",
            "fontSize": "fontSize-sm"
          },
          "lg": {
            "padding": "0.75rem 1.5rem",
            "fontSize": "fontSize-base"
          }
        }
      },
      "input": {
        "base": {
          "width": "100%",
          "padding": "0.5rem 0.75rem",
          "borderRadius": "borderRadius-md",
          "border": "1px solid neutral-300",
          "fontSize": "fontSize-sm",
          "background": "background-primary",
          "transition": "transitions-fast",
          "focus": {
            "outline": "none",
            "borderColor": "primary-500",
            "ring": "0 0 0 3px rgba(99, 102, 241, 0.1)"
          }
        },
        "label": {
          "fontSize": "fontSize-sm",
          "fontWeight": "fontWeight-medium",
          "color": "neutral-700",
          "marginBottom": "0.25rem",
          "display": "block"
        },
        "helperText": {
          "fontSize": "fontSize-xs",
          "color": "neutral-500",
          "marginTop": "0.25rem"
        },
        "error": {
          "borderColor": "danger-default",
          "focus": {
            "borderColor": "danger-default",
            "ring": "0 0 0 3px rgba(239, 68, 68, 0.1)"
          }
        }
      },
      "badge": {
        "base": {
          "display": "inline-flex",
          "alignItems": "center",
          "padding": "0.125rem 0.625rem",
          "borderRadius": "borderRadius-full",
          "fontSize": "fontSize-xs",
          "fontWeight": "fontWeight-medium"
        },
        "variants": {
          "success": {
            "background": "rgba(16, 185, 129, 0.1)",
            "color": "success-default"
          },
          "danger": {
            "background": "rgba(239, 68, 68, 0.1)",
            "color": "danger-default"
          },
          "warning": {
            "background": "rgba(245, 158, 11, 0.1)",
            "color": "yellow-600"
          },
          "info": {
            "background": "rgba(59, 130, 246, 0.1)",
            "color": "blue-600"
          },
          "neutral": {
            "background": "neutral-100",
            "color": "neutral-600"
          }
        }
      },
      "charts": {
        "container": {
          "padding": "spacing-sm",
          "height": "300px",
          "width": "100%"
        },
        "colors": {
          "primary": ["#6366f1", "#818cf8", "#a5b4fc", "#c7d2fe", "#e0e7ff"],
          "semantic": ["#10b981", "#ef4444", "#f59e0b", "#3b82f6", "#8b5cf6"],
          "gradient": {
            "from": "#6366f1",
            "to": "#a5b4fc"
          }
        },
        "grid": {
          "color": "neutral-200",
          "strokeDasharray": "3 3"
        },
        "axis": {
          "color": "neutral-400",
          "fontSize": "fontSize-xs",
          "fontWeight": "fontWeight-normal"
        },
        "tooltip": {
          "background": "neutral-900",
          "color": "white",
          "padding": "spacing-xs",
          "borderRadius": "borderRadius-md",
          "fontSize": "fontSize-xs",
          "shadow": "shadows-lg"
        },
        "types": {
          "line": {
            "strokeWidth": 2,
            "dot": {
              "size": 4,
              "strokeWidth": 2
            }
          },
          "bar": {
            "borderRadius": "borderRadius-sm",
            "gap": "20%"
          },
          "donut": {
            "innerRadius": "60%",
            "cornerRadius": 2
          },
          "gauge": {
            "innerRadius": "80%",
            "startAngle": -90,
            "endAngle": 90,
            "trackColor": "neutral-200",
            "labelFontSize": "fontSize-2xl",
            "sublabelFontSize": "fontSize-sm"
          }
        }
      },
      "dataTables": {
        "header": {
          "background": "neutral-50",
          "padding": "spacing-sm",
          "fontWeight": "fontWeight-semibold",
          "fontSize": "fontSize-sm",
          "color": "neutral-700",
          "borderBottom": "2px solid neutral-200"
        },
        "row": {
          "padding": "spacing-sm",
          "borderBottom": "1px solid neutral-100",
          "hover": {
            "background": "neutral-50"
          }
        },
        "cell": {
          "fontSize": "fontSize-sm",
          "color": "neutral-900"
        }
      },
      "metrics": {
        "container": {
          "display": "flex",
          "flexDirection": "column",
          "gap": "spacing-xs"
        },
        "value": {
          "fontSize": "fontSize-3xl",
          "fontWeight": "fontWeight-bold",
          "color": "neutral-900",
          "lineHeight": "lineHeight-tight"
        },
        "label": {
          "fontSize": "fontSize-sm",
          "color": "neutral-500",
          "fontWeight": "fontWeight-medium"
        },
        "change": {
          "fontSize": "fontSize-sm",
          "fontWeight": "fontWeight-medium",
          "display": "inline-flex",
          "alignItems": "center",
          "gap": "0.25rem",
          "positive": {
            "color": "success-default"
          },
          "negative": {
            "color": "danger-default"
          }
        }
      },
      "notifications": {
        "base": {
          "padding": "spacing-sm spacing-md",
          "borderRadius": "borderRadius-md",
          "display": "flex",
          "alignItems": "center",
          "gap": "spacing-sm",
          "fontSize": "fontSize-sm"
        },
        "variants": {
          "info": {
            "background": "blue-50",
            "color": "blue-900",
            "border": "1px solid blue-200"
          },
          "success": {
            "background": "green-50",
            "color": "green-900",
            "border": "1px solid green-200"
          },
          "warning": {
            "background": "yellow-50",
            "color": "yellow-900",
            "border": "1px solid yellow-200"
          },
          "error": {
            "background": "red-50",
            "color": "red-900",
            "border": "1px solid red-200"
          }
        }
      }
    },
    "patterns": {
      "dashboardGrid": {
        "display": "grid",
        "gridTemplateColumns": {
          "sm": "1fr",
          "md": "repeat(2, 1fr)",
          "lg": "repeat(3, 1fr)",
          "xl": "repeat(4, 1fr)"
        },
        "gap": "spacing-md"
      },
      "statCard": {
        "structure": {
          "icon": {
            "size": "2.5rem",
            "color": "primary-500",
            "background": "primary-50",
            "padding": "spacing-sm",
            "borderRadius": "borderRadius-lg"
          },
          "content": {
            "display": "flex",
            "flexDirection": "column",
            "gap": "spacing-xs"
          },
          "trend": {
            "display": "flex",
            "alignItems": "center",
            "gap": "spacing-xs",
            "fontSize": "fontSize-sm"
          }
        }
      },
      "listItem": {
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between",
        "padding": "spacing-sm 0",
        "borderBottom": "1px solid neutral-100",
        "hover": {
          "background": "neutral-50",
          "padding": "spacing-sm",
          "margin": "-spacing-sm",
          "borderRadius": "borderRadius-md"
        }
      },
      "emptyState": {
        "textAlign": "center",
        "padding": "spacing-2xl",
        "icon": {
          "size": "4rem",
          "color": "neutral-300",
          "marginBottom": "spacing-md"
        },
        "title": {
          "fontSize": "fontSize-lg",
          "fontWeight": "fontWeight-semibold",
          "color": "neutral-900",
          "marginBottom": "spacing-xs"
        },
        "description": {
          "fontSize": "fontSize-sm",
          "color": "neutral-500"
        }
      }
    },
    "animations": {
      "fadeIn": {
        "keyframes": {
          "from": { "opacity": 0 },
          "to": { "opacity": 1 }
        },
        "duration": "300ms",
        "easing": "ease-out"
      },
      "slideIn": {
        "keyframes": {
          "from": { "transform": "translateY(10px)", "opacity": 0 },
          "to": { "transform": "translateY(0)", "opacity": 1 }
        },
        "duration": "300ms",
        "easing": "ease-out"
      },
      "pulse": {
        "keyframes": {
          "0%, 100%": { "opacity": 1 },
          "50%": { "opacity": 0.5 }
        },
        "duration": "2s",
        "easing": "ease-in-out",
        "iterationCount": "infinite"
      }
    },
    "responsive": {
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "containerMaxWidth": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    }
  }
}